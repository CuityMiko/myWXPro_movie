<swiper indicator-dots="true">
  <block wx:for="{{guidepages}}" wx:for-index="index" wx:key="{{item.id}}">
    <swiper-item>
      <image src="{{item.image}}" class="slide-image" mode="aspectFill"/>
      <button class="btn" bindtap="start" wx:if="{{index == guidepages.length - 1}}">立即体验</button>
    </swiper-item>
  </block>
</swiper>
